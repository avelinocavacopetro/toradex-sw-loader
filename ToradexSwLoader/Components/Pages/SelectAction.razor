@page "/selectAction"

@inject NavigationManager UriHelper

<PageTitle>Selecionar Ação</PageTitle>

@if (isLoading)
{
    <div class="center">
        <div class="text-center mt-5">
            <div class="spinner-border text-success" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">A carregar...</span>
            </div>
            <p class="mt-3">A carregar...</p>
        </div>
    </div>
}
else
{
    <a href="#"
       onclick="if (@(isLoading.ToString().ToLower())) { event.preventDefault(); } else { history.back(); }"
       class="text-black"
       style="cursor: @(isLoading ? "default" : "pointer");">
        <i class="bi bi-arrow-left fs-1"></i>
    </a>

    <h3 class="text-center pb-5">Selecionar Ação</h3>

    <div class="grid-container">
        <div class="grid-item" @onclick="UpdateImage">
            Atualizar imagem
        </div>
        <div class="grid-item">
            Atualizar versão
        </div>
    </div>
}

@code {
    private bool isLoading = false;

    private async Task UpdateImage()
    {
        UriHelper.NavigateTo($"/updateImage");
    }
}
