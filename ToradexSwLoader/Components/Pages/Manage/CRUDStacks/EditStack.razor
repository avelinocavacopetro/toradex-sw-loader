@page "/manageStacks/edit/{StackId:int}"

@inject IDbContextFactory<AppDbContext> DbContextFactory
@inject IStringLocalizer<Resource> localizer
@inject IToastService ToastService
@inject FilterService FilterService
@inject NavigationManager NavigationManager

<PageTitle>@localizer["EditStacks"]</PageTitle>

@if (isLoading)
{
    <div class="center">
        <div class="text-center mt-5">
            <div class="spinner-border text-success" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">@localizer["Loading"]...</span>
            </div>
            <p class="mt-3">@localizer["Loading"]...</p>
        </div>
    </div>
}
else
{
    <div class="custom-container">
        <div class="page-title d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <i class="bi bi-card-list icon-align fs-3" style="padding-left: 10px;"></i>
                <h3 class="ms-2 mb-0">@localizer["EditStack"]</h3>
            </div>

            <div class="d-flex gap-3">
                <button class="btn btn-outline-light border border-white border-2"
                        style="width: 100px;"
                        @onclick="Cancel">
                    <i class="bi bi-arrow-left fs-5"></i>
                </button>
                <button class="btn btn-outline-light border border-white border-2 fs-5"
                        style="width: 150px;"
                        @onclick="SaveChanges">
                    <i class="bi bi-floppy"></i> @localizer["Save"]
                </button>
            </div>
        </div>

        <div class="edit-form mt-4">
            <div class="d-flex align-items-center gap-3">
                <label for="text" class="mb-0" style="font-size: 1.5rem; flex-shrink: 0;">
                    @localizer["Name"]
                    <span style="font-size: 15px;"> (@localizer["Max"]. 50 @localizer["Characters"])</span> :
                </label>
                <input type="text" @bind="stackName"
                       class="form-control"
                       style="font-size: 1.2rem; border: 1px solid grey;" 
                       maxlength="50"/>
            </div>

            <br />
            <h4>@localizer["SelectProducts"]</h4>

            <div class="w-50">
                <input type="text" class="form-control" style="border: 1px solid grey;"
                       placeholder="Pesquisar produto pelo nome..."
                       @bind="searchTerm" @bind:event="oninput" />
            </div>

            <div class="card-body pb-2 px-0 mb-0 mt-3">
                <div class="table-add-edit-responsive border rounded-2">
                    <QuickGrid Class="table table-striped m-0"
                               Items="@FilteredProducts.AsQueryable()"
                               ItemKey="@(pd => pd.Id)">

                        <!--- Coluna dos nomes dos produtos --->
                        <TemplateColumn>
                            <HeaderTemplate>
                                <div class="header-table-left">
                                    @localizer["Product"]
                                </div>
                            </HeaderTemplate>
                            <ChildContent>
                                <div class="body-table-left">
                                    @context.Name
                                </div>
                            </ChildContent>
                        </TemplateColumn>

                        <!--- Coluna do estado (Selecionado ou não) --->
                        <TemplateColumn>
                            <HeaderTemplate>
                                <div class="header-table-center">
                                    @localizer["Select"]
                                </div>
                            </HeaderTemplate>
                            <ChildContent>
                                <div class="body-table-center">
                                    <input type="checkbox" class="largerCheckbox d-block mx-auto my-auto"
                                           id="toggle-@context.Id"
                                           @onchange="(e => ToggleProduct(e, context))"
                                           checked="@selectedProducts.Any(p => p.Id == context.Id)" />
                                </div>
                            </ChildContent>
                        </TemplateColumn>
                    </QuickGrid>

                    @if (!FilteredProducts.Any())
                    {
                        <table class="table table-striped m-0">
                            <tbody>
                                <tr>
                                    <td colspan="10" class="text-center text-muted" style="padding: 1rem;">
                                        @localizer["NoData"]
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>

                <div class="d-flex justify-content-end mt-3 px-3">
                    <p>@FilteredProducts.Count() @localizer["Product"]&#40s&#41</p>
                </div>
            </div>
        </div>
    </div>
}

@code {
    // Variáveis: Parameters
    [Parameter]
    public int StackId { get; set; }

    // Variáveis: Object
    List<Product> selectedProducts = new();
    List<Product> products = new();
    static readonly ILog _log = LogManager.GetLogger(typeof(EditStack));

    IEnumerable<Product> FilteredProducts =>
        string.IsNullOrWhiteSpace(searchTerm)
            ? products
            : products.Where(f => f.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));

    // Variáveis: Integer
    const int NameLength = 50;

    // Variáveis: String
    string stackName = string.Empty;
    string _searchTerm = string.Empty;
    string searchTerm
    {
        get => _searchTerm;
        set
        {
            if (_searchTerm != value)
            {
                _searchTerm = value;
            }
        }
    }

    // Variáveis: Boolean
    bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await FilterService.LoadFilterAsync();
            products = FilterService.SelectedProducts;

            using var context = DbContextFactory.CreateDbContext();
            var stack = await context.Stacks.FirstOrDefaultAsync(s => s.Id == StackId);

            if (stack != null)
            {
                stackName = stack.Name;

                selectedProducts = await context.ProductStacks
                    .Where(ps => ps.StackId == StackId)
                    .Select(ps => ps.Product!)
                    .ToListAsync();
            }

            isLoading = false;
        }
        catch (Exception ex)
        {
            _log.Error("Error loading stack. ", ex);
            
            ToastService.ShowError($"{@localizer["Error"]}. {@localizer["TryAgain"]}");
            NavigationManager.NavigateTo("/manageStacks");
        }
    }

    void ToggleProduct(ChangeEventArgs e, Product product)
    {
        var isChecked = e.Value is bool b && b;

        if (isChecked)
        {
            if (!selectedProducts.Any(p => p.Id == product.Id))
                selectedProducts.Add(product);
        }
        else
        {
            selectedProducts.RemoveAll(p => p.Id == product.Id);
        }
    }

    async Task SaveChanges()
    {
        try
        {
            if (!ValidateStack())
                return;

            if (!ValidateProductCount())
                return;

            using var context = DbContextFactory.CreateDbContext();

            await ChangeStack(context);
            
            ToastService.ShowSuccess(@localizer["EditedSuccess"]);

            NavigationManager.NavigateTo("/manageStacks");
        }
        catch (Exception ex)
        {
            _log.Error("Error saving changes. ", ex);
            
            ToastService.ShowError($"{@localizer["Error"]}. {@localizer["TryAgain"]}");
            return;
        }
    }

    bool ValidateStack()
    {
        if (string.IsNullOrWhiteSpace(stackName))
        {
            ToastService.ShowWarning(@localizer["ValidName"]);
            return false;
        }

        if (stackName.Length > NameLength)
        {
            ToastService.ShowWarning($"{@localizer["LongName"]}. {@localizer["Max50"]}");
            return false;
        }

        return true;
    }

    bool ValidateProductCount()
    {
        if (selectedProducts.Count < 1)
        {
            ToastService.ShowWarning(@localizer["PleaseSelectProduct"]);
            return false;
        }

        return true;
    }

    async Task ChangeStack(AppDbContext context)
    {
        var stackDb = await context.Stacks.FirstOrDefaultAsync(s => s.Id == StackId);
        if (stackDb == null) return;

        stackDb.Name = stackName;

        var oldProductStacks = context.ProductStacks.Where(ps => ps.StackId == stackDb.Id);
        context.ProductStacks.RemoveRange(oldProductStacks);

        foreach (var product in selectedProducts)
        {
            context.ProductStacks.Add(new ProductStack
            {
                StackId = stackDb.Id,
                ProductId = product.Id
            });
        }

        await context.SaveChangesAsync();
    }

    void Cancel()
    {
        NavigationManager.NavigateTo("/manageStacks");
    }
}